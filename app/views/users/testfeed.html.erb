                                    <a class="" href="/stops/<%=Stop.find_by(id: id).id%>">
                                      <% if Stop.find_by(id: id).images.length > 0 %>
                                          <img class=" feedpicmedia-object" src="<%=Stop.find_by(id: id).images.first.url%>" alt="blog-image">
