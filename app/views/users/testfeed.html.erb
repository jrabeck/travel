                        <% if current_user.traveling == true %>
                        I'm done traveling!
                        <% elsif current_user.traveling == false %>
                        I'm traveling now!
                        <% end %>
                          
                        </button>
                        
                    </form>

                    
                     <a class="btn buttonTransparent" value="traveling"  href="/users/traveling"> I'm Tr@\/e|ing now! </a>



                  </div>
                </div>
              <div role="tabpanel" class="tabArea">
