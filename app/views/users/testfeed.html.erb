                    <a href="#popular" aria-controls="popular" role="tab" data-toggle="tab">Friends</a>
                  </li>
                
                </ul>

                <!-- Tab panes -->
                <div id="friendsidebar" class="tab-content">
                  <div role="tabpanel" class="tab-pane active" id="recent">
