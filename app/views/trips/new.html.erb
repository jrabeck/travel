<!-- asks what places you will be visiting, and you keep adding them through a form. -->
<h1>Create a Trip!</h1>
<%= form_tag "/trips", method: :post do  %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :Attendee %>
    <%= text_field_tag :attendee_id %>
  </div>
  <%= submit_tag "Submit" %>
<% end %>